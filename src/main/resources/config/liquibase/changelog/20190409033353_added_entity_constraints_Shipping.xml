<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Shipping.
    -->
    <changeSet id="20190409033353-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="shipping"
                                 constraintName="fk_shipping_order_id"
                                 referencedColumnNames="id"
                                 referencedTableName="my_order"/>

        <addForeignKeyConstraint baseColumnNames="shipping_address_id"
                                 baseTableName="shipping"
                                 constraintName="fk_shipping_shipping_address_id"
                                 referencedColumnNames="id"
                                 referencedTableName="address"/>

        <addForeignKeyConstraint baseColumnNames="billing_address_id"
                                 baseTableName="shipping"
                                 constraintName="fk_shipping_billing_address_id"
                                 referencedColumnNames="id"
                                 referencedTableName="address"/>

        <addForeignKeyConstraint baseColumnNames="type_id"
                                 baseTableName="shipping"
                                 constraintName="fk_shipping_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="shipping_type"/>

    </changeSet>
</databaseChangeLog>
