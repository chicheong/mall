<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Company.
    -->
    <changeSet id="20190409033330-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="company"
                                 constraintName="fk_company_parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>

        <addForeignKeyConstraint baseColumnNames="companies_id"
                                 baseTableName="company_department"
                                 constraintName="fk_company_department_companies_id"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>
        <addForeignKeyConstraint baseColumnNames="departments_id"
                                 baseTableName="company_department"
                                 constraintName="fk_company_department_departments_id"
                                 referencedColumnNames="id"
                                 referencedTableName="department"/>
        
        <addForeignKeyConstraint baseColumnNames="companies_id"
                                 baseTableName="company_office"
                                 constraintName="fk_company_office_companies_id"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>
        <addForeignKeyConstraint baseColumnNames="offices_id"
                                 baseTableName="company_office"
                                 constraintName="fk_company_office_offices_id"
                                 referencedColumnNames="id"
                                 referencedTableName="office"/>
        
    </changeSet>
</databaseChangeLog>
